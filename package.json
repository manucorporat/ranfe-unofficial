{
  "name": "renfe-website",
  "version": "0.0.1",
  "description": "Redise√±o de la web de renfe",
  "scripts": {
    "clean": "rm -rf ./www/build ./dist",
    "dev-server": "live-server --mount=/:./www --watch=./www",
    "watch": "concurrently \"npm run watch-js\" \"npm run watch-css\" \"npm run dev-server\"",
    "watch-css": "node-sass ./src/index.scss --output ./www/build --watch --outputStyle expanded",
    "watch-js": "rollup -c --watch",
    "build": "npm run build-js && npm run build-css",
    "build-css": "node-sass ./src/index.scss --output ./www/build --format compressed",
    "build-js": "rollup -c && uglifyjs -o ./www/build/index.js  -c -m -- ./www/build/index.js",
    "dist": "npm run clean && npm run build && cp -a www dist",
    "deploy": "bs --no-yarn --no-cleanup --directory ./dist --hook dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manucorporat/renfe.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manucorporat/renfe/issues"
  },
  "homepage": "https://github.com/manucorporat/renfe#readme",
  "devDependencies": {
    "branchsite": "^4.0.2",
    "concurrently": "^3.5.0",
    "live-server": "^1.2.0",
    "node-sass": "^4.5.3",
    "rollup": "^0.50.0",
    "rollup-plugin-typescript2": "^0.7.0",
    "tslint": "^5.7.0",
    "tslint-ionic-rules": "0.0.11",
    "typescript": "^2.5.3",
    "uglify-es": "^3.1.3"
  },
  "dependencies": {
    "@types/awesomplete": "^1.1.6",
    "awesomplete": "^1.1.2"
  }
}
