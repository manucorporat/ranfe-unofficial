{
  "name": "renfe-website",
  "version": "0.0.1",
  "description": "Redise√±o de la web de renfe",
  "scripts": {
    "start": "npm run build && npm run watch",
    "clean": "rm -rf dist",
    "dev-server": "http-server ./dist -s -o -c-1",
    "watch": "concurrently \"npm run watch-js\" \"npm run watch-css\" \"npm run dev-server\"",
    "watch-css": "node-sass ./src/index.scss --output ./dist/ --watch",
    "watch-js": "rollup -c --watch",
    "build": "npm run clean && npm run build-js && npm run build-css && npm run copy-html && npm run copy-assets",
    "build-css": "node-sass ./src/index.scss --output ./dist/",
    "build-js": "rollup -c",
    "copy-html": "cp ./src/*.html ./dist",
    "copy-assets": "cp -a ./src/assets ./dist",
    "deploy": "bs --directory ./dist --no-yarn --no-cleanup --hook build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manucorporat/renfe.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manucorporat/renfe/issues"
  },
  "homepage": "https://github.com/manucorporat/renfe#readme",
  "devDependencies": {
    "branchsite": "^4.0.2",
    "concurrently": "^3.5.0",
    "http-server": "^0.10.0",
    "node-sass": "^4.5.3",
    "rollup": "^0.50.0",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-typescript2": "^0.7.0",
    "tslint": "^5.7.0",
    "tslint-ionic-rules": "0.0.11",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "font-awesome": "^4.7.0"
  }
}
